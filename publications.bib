@article{adeyeye2019magnetization-induced171742442,
    author = {Kolmychek, I. A. and Dolgikh, I. A. and Zhou, X. and Adeyeye, A. O. and Murzina, T. V.},
    title = {Magnetization-induced chirality in second harmonic generation response of U-shaped permalloy nanostructures},
    journal = {Physical Review B},
    year = {2019},
    volume = {99},
    number = {4},
    issn = {0163-1829; 2469-9950; 2469-9969; 1098-0121},
    doi = {10.1103/PhysRevB.99.045435},
    pages = {045435-1--045435-4},
    publisher = {American Physical Society},
    address = {United States},
    abstract = {Magnetization-induced circular dichroism (CD) in optical second harmonic generation (SHG) is observed
