@article{gaier2022fluorescence500248989,
    author = {Yakimov, Boris and Gayer, Alexey and Maksimov, Eugene and Mamonov, Evgeniy and Maydykovsky, Anton and Murzina, Tatiana and Fadeev, Victor and Shirshin, Evgeny},
