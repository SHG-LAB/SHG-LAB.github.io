 month = {August},
 number = {1-2},
 pages = {225--231},
 publisher = {Elsevier BV},
 title = {Dc-Electric-Field-Induced Optical 2nd-Harmonic Generation at the Smooth Metal-Electrolyte Interface},
 urldate = {2025-03-15},
