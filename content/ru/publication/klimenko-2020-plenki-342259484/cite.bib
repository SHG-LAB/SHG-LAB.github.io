 booktitle = {Актуальные проблемы неорганической химии. (2020, Звенигород, Тезисы)},
 language = {russian},
 pages = {84--85},
 title = {Плёнки анодного оксида алюминия с низкой пористостью и гиперболические метаматериалы на их основе},
 year = {2020}
}
